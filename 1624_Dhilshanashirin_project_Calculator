    "from tkinter import *\n",
    "\n",
    "window = Tk()\n",
    "\n",
    "window.title(\"Calculator\")\n",
    "window.geometry('380x395')\n",
    "window.config(background='white')\n",
    "\n",
    "class Calculator:\n",
    "    def __init__(self, window):\n",
    "        self.entry_value = \"\"  # To store the current entry value\n",
    "        self.equation = StringVar()\n",
    "\n",
    "        self.entry = Entry(window, textvariable=self.equation, width=18, background='#fff', font=('Arial Bold', 28))\n",
    "        self.entry.grid(row=0, column=0, columnspan=4)\n",
    "\n",
    "    def click(self, value):\n",
    "        self.entry_value += str(value)\n",
    "        self.equation.set(self.entry_value)\n",
    "\n",
    "    def clear(self):\n",
    "        self.entry_value = \"\"\n",
    "        self.equation.set(\"\")\n",
    "\n",
    "    def equal(self):\n",
    "        try:\n",
    "            result = eval(self.entry_value)\n",
    "            self.equation.set(result)\n",
    "            self.entry_value = str(result)\n",
    "        except:\n",
    "            self.equation.set(\"Error\")\n",
    "            self.entry_value = \"\"\n",
    "\n",
    "calculator = Calculator(window\n",
    "                        \n",
    "btn1 = Button(window, text='(', width=12, height=4, command=lambda: calculator.click('('))\n",
